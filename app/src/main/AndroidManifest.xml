<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="daily.quotes.english">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="com.android.alarm.permission.SET_ALARM" />-->

    <queries>
        <intent>
            <action android:name="com.huawei.hms.core.aidlservice" />
        </intent>
    </queries>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/quotes_logo"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyQuotesEng"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.SettingsActivity"
            android:screenOrientation="portrait" />
        <!--
        <receiver android:name=".receiver.AlarmReceiver" />
        <receiver android:name=".receiver.AlarmBroadcastReceiver" />
        -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8063240213539897~4650103945" />
    </application>

</manifest>